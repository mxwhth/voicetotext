<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.voicetotext.TestActivity">

    <RelativeLayout
        android:id="@+id/LayoutForSegmentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="fill_vertical">

        <Button
            android:id="@+id/commitForSegmentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="确认" />

        <Button
            android:id="@+id/cancelForSegmentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="取消" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editTextForSegmentation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/LayoutForSegmentation"
        android:hint="输入待分割字符串" />

    <TextView
        android:id="@+id/textViewForSegmentation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/editTextForSegmentation"
        android:gravity="top"
        android:hint="分词结果"
        android:textColor="@color/red" />


</RelativeLayout>
